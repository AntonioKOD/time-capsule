# Production Environment Variables
# Copy this file to .env.local and fill in your production values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Database
DATABASE_URI=mongodb+srv://username:password@cluster.mongodb.net/production-db?retryWrites=true&w=majority&appName=YourApp

# Payload CMS
PAYLOAD_SECRET=your-super-secure-payload-secret-key-here

# Stripe (Production Keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=info@timecapsul.co

# SMS Service (Twilio) - Optional
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AWS SES (Alternative Email Service) - Optional
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Security
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=https://your-domain.com

# Analytics & Monitoring (Optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn

# Performance
NEXT_PUBLIC_CDN_URL=https://your-cdn-domain.com

# File Storage
MEDIA_DIR=/tmp/media

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your_actual_token_here 